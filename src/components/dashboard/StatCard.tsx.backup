'use client';
import React from 'react';
import { TrendingUp } from 'lucide-react';

export function StatCard({ title, value, color }: { title: string; value: string | number; color: string }) {
  const colors: Record<string, string> = { green: 'bg-green-500', red: 'bg-red-500', blue: 'bg-blue-500', purple: 'bg-purple-500' };
  return (
    <div className="bg-white rounded-lg shadow p-6">
      <div className={`w-12 h-12 ${colors[color]} rounded-full flex items-center justify-center mb-4`}>
        <TrendingUp className="text-white" />
      </div>
      <h3 className="text-black text-sm">{title}</h3>
      <p className="text-2xl font-bold mt-2">{value}</p>
    </div>
  );
}